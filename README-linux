# dynamically check DRI environment -> normally DRI config use "module", sooooo....

if hash module 2>/dev/null; then
	if [ -f $(find /tmp_user/ -type f -name "*GAIA.sh" 2>/dev/null) ]; then
		if [ -z ${GAIA_REQUIRE_CLEAN_INSTALL_ENVIRONMENT+x} ]; then
			source $(find /tmp_user/ -type f -name "*GAIA.sh" 2>/dev/null)
		fi
	else 
		echo "[GAIA] Erreur dans la configuration de votre environment de travail... Contactez les administrateurs: Christian S. ou Nawfel K."
	fi
else
	if [ -f $(find ~/ -type f -name "*GAIA.sh" 2>/dev/null) ]; then
		if [ -z ${GAIA_REQUIRE_CLEAN_INSTALL_ENVIRONMENT+x} ]; then
			source $(find ~/ -type f -name "*GAIA.sh" 2>/dev/null)
		fi
	else 
		echo "[GAIA] Erreur dans la configuration de votre environment de travail... Contactez les administrateurs: Christian S. ou Nawfel K."
	fi
fi

# colored man -> https://gist.github.com/cocoalabs/2fb7dc2199b0d4bf160364b8e557eb66 :) 

man() {
	env \
		LESS_TERMCAP_mb=$(printf "\e[1;31m") \
		LESS_TERMCAP_md=$(printf "\e[1;31m") \
		LESS_TERMCAP_me=$(printf "\e[0m") \
		LESS_TERMCAP_se=$(printf "\e[0m") \
		LESS_TERMCAP_so=$(printf "\e[1;44;33m") \
		LESS_TERMCAP_ue=$(printf "\e[0m") \
		LESS_TERMCAP_us=$(printf "\e[1;32m") \
		man "$@"
}
