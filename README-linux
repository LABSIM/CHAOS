# On check l'existance du lien symbolique qui sera modifié par la suite & on verifie que l'on est pas en pleine install
if [ -f ~/.labsim.env.sh ]; then 
	if [ -z ${DEVTK_REQUIRE_CLEAN_INSTALL_ENVIRONMENT+x} ]; then
		source ~/.labsim.env.sh
	fi 
fi

