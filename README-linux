# dynamically check DRI environment -> normally DRI config use "module", sooooo....

if [ -z ${GAIA_REQUIRE_CLEAN_INSTALL_ENVIRONMENT+x} ]; then
	if hash module 2>/dev/null; then
		if [ -f $(find /tmp_user/ -type f -name "*GAIA.sh" 2>/dev/null) ]; then
			source $(find /tmp_user/ -type f -name "*GAIA.sh" 2>/dev/null)
		else 
			echo "[GAIA][DRI] Erreur dans la configuration de votre environment de travail... Contactez les administrateurs: Christian S. ou Nawfel K."
		fi
	else
		if [ -f $(find ~/ -type f -name "*GAIA.sh" 2>/dev/null) ]; then
			source $(find ~/ -type f -name "*GAIA.sh" 2>/dev/null)
		else 
			echo "[GAIA][LABSIM] Erreur dans la configuration de votre environment de travail... Contactez les administrateurs: Christian S. ou Nawfel K."
		fi
	fi
else 
	echo "[GAIA] Warning : environment de travail clean... En cas de doute(s) sur la(les) cause(s), contactez les administrateurs: Christian S. ou Nawfel K."
fi