// For format details, see https://aka.ms/vscode-remote/devcontainer.json 
{
	
	"name": "LABSIM devcontainer distro - Linux & LLVM",
	"image": "labsim-devcontainer-llvm-bookworm:2.0.1",
	"remoteUser": "labsim",
	"userEnvProbe": "loginInteractiveShell",
	"capAdd": [ 

		"SYS_PTRACE", 
		"SYS_ADMIN" 

	],
	"securityOpt": [ 

		"seccomp=unconfined", 
		"apparmor=unconfined", 
		"label=disable" 
		
	],
	"workspaceFolder": "/home/labsim/dev",
	"workspaceMount": "source=${localWorkspaceFolder},target=/home/labsim/dev/titans/CHAOS,type=bind,consistency=cached",

	"customizations": { 
	
		"vscode": {

			"extensions": [

				"ms-vscode.cpptools",
				"ms-vscode.cmake-tools",
				"redhat.vscode-xml",
				"redhat.vscode-yaml",
				"github.vscode-pull-request-github",
				"vadimcn.vscode-lldb",
				"twxs.cmake",
				"davidanson.vscode-markdownlint",
				"davidwang.ini-for-vscode",
				"jeff-hykin.better-shellscript-syntax",
				"d9705996.perl-toolbox",
				"eamodio.gitlens"

			] /* extensions */

		} /* vscode */

	} /* customizations */

}
