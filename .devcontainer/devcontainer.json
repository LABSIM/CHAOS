// For format details, see https://aka.ms/vscode-remote/devcontainer.json 
{
	"name": "LABSIM devcontainer distro - Linux & GNU GCC",
	"image": "labsim-devcontainer:2.0.0",
	"remoteUser": "labsim",
	"context": "..",
	"settings": {
		"terminal.integrated.shell.linux": "/bin/bash",
		"terminal.integrated.shellArgs.linux": [ "-l", "-i" ],
		"terminal.integrated.inheritEnv": true,
		"terminal.integrated.detectLocale": "auto",
		"terminal.integrated.copyOnSelection": true,
		"terminal.integrated.cwd": "/home/labsim/dev"
	},
	"runArgs": [ 
		"-it",
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined"
	],
	"workspaceFolder": "/home/labsim/dev",
	"workspaceMount": "source=${localWorkspaceFolder},target=/home/labsim/dev/titans/CHAOS,type=bind,consistency=cached",
	"extensions": [
		"ms-vscode.cpptools",
		"ms-vscode.cmake-tools",
		"twxs.cmake",
		"davidanson.vscode-markdownlint",
		"davidwang.ini-for-vscode",
		"jeff-hykin.better-shellscript-syntax",
		"d9705996.perl-toolbox",
		"redhat.vscode-yaml",
		"eamodio.gitlens",
		"github.vscode-pull-request-github"
	]
}
